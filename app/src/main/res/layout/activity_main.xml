<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- IP 设置区域 -->
    <LinearLayout
        android:id="@+id/ip_setting_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打印机 IP:"
            android:textSize="16sp"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/et_ip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textUri"
            android:text="192.168.39.175"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_set_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textSize="16sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- SNMP 查询按钮 -->
    <Button
        android:id="@+id/btn_snmp_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="执行 SNMP 查询"
        android:textSize="16sp"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/ip_setting_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- 结果展示区域 -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_snmp_query"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/result_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="300dp"
            android:padding="8dp"
            android:textSize="14sp"
            android:inputType="none"
            android:cursorVisible="false"
            android:background="@null"
            android:scrollbars="vertical"
            android:gravity="top|start"
            android:textColor="#000000" />
    </ScrollView>

    <!-- 文件选择区域 -->
    <LinearLayout
        android:id="@+id/file_select_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/scroll_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btn_select_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择 PDF 文件"
            android:textSize="16sp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_selected_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="未选择文件"
            android:textSize="14sp"
            android:textColor="#666666"
            android:ellipsize="end"
            android:singleLine="true" />
    </LinearLayout>

    <!-- 打印区域 -->
    <LinearLayout
        android:id="@+id/print_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/file_select_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btn_print_supported"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打印机支持项"
            android:textSize="16sp"
            android:backgroundTint="#980000"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_print"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打印文件"
            android:textSize="16sp"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_print_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打印结果："
            android:textSize="14sp"
            android:textColor="#666666" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>